<style>
    .customContainer {
        background-color:#333;
        margin-bottom: 10px;
        width: 100%; 
        display: flex;
        justify-content: center; 
    }

    .card.four {
        background-color:#e3e3e3;
        width: 80%; /* Set width to 80% of the viewport */
        max-width: 1200px; 
        margin: 0 auto;
    }

    .inner {
        padding: 20px;
        border-bottom: 1px solid #17A2B8;
    }
</style>


<div class="customContainer">
    <div id="orderHistory" class="card four">
        <div class="card-body" style="height: 300px; overflow-y: auto;">
            <h1 class="text-center mb-4"><b>Order History</b></h1>
            <% let prevOrderId=null; let serial=1; %>
            <% for(let i=0; i<order.length; i++){ %>
            <% if(order[i][0] !==prevOrderId) { %>
            <% if (prevOrderId !==null) { %>
        </div> <!-- Close previous group -->
        <% serial=serial+1} %>
        <div class="inner" style="color:#333">
            <h2><b>Order <%= serial %></b></h2>
            <p><b>Order Date: </b><i>
                    <%=order[i][3] %>
                </i></p>
            <p><b>Amount Spent: </b><i>$<%= order[i][5] %></i></p>
            <p><b>Status: </b><i>
                    <%= order[i][6] %>
                </i></p>
            <p><b>Payment Mode: </b><i><%= order[i][7] %></i></p>
            <% } %>
            <div class="product">
                <p><b>Product Name:</b>
                    <%= order[i][1] %>
                </p>
                <p><b>Quantity: </b><i>
                        <%= order[i][2] %>
                    </i></p>
            </div>
            <% prevOrderId=order[i][0]; %> <!-- Update prevOrderId -->
            <% } %>
        </div> <!-- Close last group -->
    </div>
</div>
