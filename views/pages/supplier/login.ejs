<%- include('../../partials/head.ejs') %>

<div class="container my-container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg bg-info">
                <div class="card-body ">
                    <h4 class="card-title text-center mb-4">Supplier Login</h4>
                    <form action="/supplier/login" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="username" class="form-label">Username</label>
                                    <input type="text" name="username" id="username" class="form-control"
                                        placeholder="Enter your Username" required>
                                </div>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label for="password" class="form-label">Password</label>
                                    <input type="password" name="password" id="password" class="form-control"
                                        placeholder="Enter your Password" required>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary btn-block">Log In</button>
                    </form>
                </div>

            </div>
            <p class="text-center mt-3">Don't have an account? <a href="/supplier/signup">Sign Up</a></p>
        </div>
    </div>
</div>

<%- include('../../partials/footer.ejs') %>
</body>

</html>
