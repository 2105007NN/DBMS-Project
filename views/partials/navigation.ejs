                <form class="form-inline my-2 my-lg-0" action="#" method="post">
                    <input type="text" id="search-box" class="form-control mr-sm-2" type="search" placeholder="Search"
                        aria-label="Search" onkeyup="sendData(this)">
                    <button id="search-btn" class="btn btn-outline-success my-2 my-sm-0" type="button">Search</button>
                </form>
